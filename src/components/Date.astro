---
import { CalendarIcon } from "@heroicons/react/24/outline/index.js";

interface Props {
    date: string;
}
const { date } = Astro.props;
---

<time datetime={date} class="flex gap-2">
    <CalendarIcon className="w-6" />
    {
        new Date(date).toLocaleDateString("en-GB", {
            year: "numeric",
            month: "short",
            day: "numeric",
        })
    }
</time>
