---
import Button from "./Button.astro";

interface Props {
  primaryHref: string;
  primaryText: string;
  hasBorderTop?: boolean;
}

const { primaryHref, primaryText, hasBorderTop } = Astro.props;
---

<div
  class:list={[
    "flex flex-col sm:flex-row items-center sm:justify-start gap-4",
    hasBorderTop ? "pt-6 border-t border-slate-200/60 dark:border-slate-700/60" : "",
  ]}
>
  <Button href={primaryHref}>{primaryText}</Button>

  <span class="text-slate-500 dark:text-slate-400">
    or <a
      href={"/blog"}
      class="text-slate-700 dark:text-slate-300 hover:text-teal-600 dark:hover:text-teal-400 transition-colors duration-200 underline underline-offset-4 decoration-slate-300 dark:decoration-slate-600 hover:decoration-teal-500 dark:hover:decoration-teal-400"
      >read my blog</a
    >
  </span>
</div>
