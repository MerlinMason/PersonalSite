---
import BlogPostMeta from "../../components/BlogPostMeta.astro";

const post: Post = Astro.props.post;
const { title, timeToRead, pubDate, tags, heroImage } = post.frontmatter;

export async function getStaticPaths() {
    const posts = await Astro.glob("../**/*.{md,mdx}");

    return posts.map((post) => {
        const slug = post.url.replace("/blog/", "");

        return [
            {
                params: { slug },
                props: { post },
            },
        ];
    });
}
---

<div class="w-[1200px] h-[630px] bg-slate-50 p-12 flex flex-col relative">
    <div class="grid gap-12 grid-cols-3 flex-grow">
        <div>
            <img src={heroImage} alt={title} />
        </div>
        <div class="col-span-2">
            <h1 class="font-bold text-8xl text-slate-800">
                {title}.
            </h1>
        </div>
    </div>

    <div class="text-2xl">
        <BlogPostMeta timeToRead={timeToRead} pubDate={pubDate} tags={tags} />
    </div>
</div>
